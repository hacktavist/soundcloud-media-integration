<html>

<head>
  <!-- jQuery UI -->
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
  <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="../css/app.css">
</head>

<body>
  <div id="flash"><div class="flash info"><%= flash[:warning] %></span></div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-md-6 col-md-offset-3">
                <h3 class="alert">
                    <a href="/viewUpload">
                        <i id="backButton" class="fa fa-chevron-left"></i>
                    </a>
                    New Sound
                    <span class="glyphicon glyphicon-music"></span>
                </h3>
            </div>
        </div>
    </div>
    <form id="upload-form" class="alert" action="/upload" method="POST" enctype="multipart/form-data">
        <div class="container">
            <div class="row clearfix">
                <div class="col-md-12 column">


                    <!-- <form id="upload-form" class="alert" action="/upload" method="POST" enctype="multipart/form-data"> -->
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input class="form-control" type="text" name="title" id="title" placeholder="Enter a title for your sound..." />
                        <div id="titleReq" class="alert-danger-text">&middot;This field is required</div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-12 column">
                    <div class="form-group">
                        <label for="descr">Description</label>
                        <textarea class="form-control" rows="3" type="text" name="descr" id="descr" placeholder="Enter a title for your description..."></textarea>
                        <div id="descriptionReq" class="alert-danger-text">&middot;This field is required</div>
                    </div>
                </div>
            </div>
          </div>
            <div class="container">
                <div class="row clearfix">
                    <div class="col-md-6 column">
                        <label for="file" style="text-align:left;">Upload Sound</label>
                        <input id="file" name="file" type="file" />
                        <div id="soundReq" class="alert-danger-text">&middot;This field is required</div>
                    </div>
                    <div class="col-md-6 column">
                        <label for="art" style="text-align:right;">Sound Image</label>
                        <input id="art" name="art" type="file" style="margin-left:45px;"/>
                    </div>
                </div><br><br>
                <input class="btn btn-info btn-large" type="submit" value="Save" />

                </br>
            </div>
    </form>
    </div>
    </div>
    </div>
    <!-- jQuery -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/js/app.js"></script>
    <!--<script type="text/javascript" src="js/recorder.js"></script>-->
</body>

</html>
