<html>
<head>
  <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="../css/app.css"
  <link rel="stylesheet" type="text/css" href="../slick/slick.css" />
<style>
table,th,td
{
border:1px solid black;
border-collapse:collapse;
}
th,td
{
padding:5px;
}
th
{
text-align:left;
}
</style>
</head>
<body>
<h1>Uploads</h1>

<a href="/newUpload">New Upload</a><br><br>

  <% if  @totalTracks == 0 %>
  <div class="alert alert-warning">
    <h3> You haven't attached any sounds yet!</h3>
    <h5> Upload new sounds using the Upload button above, or attach previously-uploaded sounds by clicking the Choose button to view your sound library.</h5>
  </div>
  <% end %>
  <% if @totalTracks > 0 %>
  <div id="slickcontainer">
    <% @trackList.each do |track| %>
    <%= track['title'] %><br>
    <%= track['user']['username'] %>

      <div class="slickel"
        <img src='source', style="border:1px solid black;border-radius:5px;width:200px;height:200px;">
          <div id="btnContainer">
            <div class="btn-group.dropup">
              <a class="btn btn-primary" href='/tracks/edit/<%=track['id']%>/<%=track['title']%>/<%=track['description']%>'><span class="glyphicon glyphicon-pencil"></span></a>
              <a class="btn btn-success" href='/viewUpload'><span class="glyphicon glyphicon-music"></span></a>
              <a class="btn btn-info"><source src="<%= track['stream_url'] %>"><span class="glyphicon glyphicon-play-circle"></a>
              <button class="btn btn-danger dropdown-toggle" data-toggle="dropdown", style="height: 40px;">
                <span clas="glyphicon glyphicon-remove"></span>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <!--<a href=('/detach/' + photo['id'].to_s + "/" + "e")>Detach</a>-->
                </li>
                <li>
                  <a onclick='return confirm("Are you sure you want to delete this sound?")' href='/tracks/delete/<%=track['id']%>'>Delete</li>
                </li>
              </ul>
            </div>
          </div>
      </div>
    <% end %>
  <% end %>
  </div>

<div id="slickcontainer">
  <% @trackList.each do |track| %>
  <div class="slickel"
        <img src='source', style="border:1px solid black;border-radius:5px;width:200px;height:200px;">

  </div>
  <div>
    <%= track['user']['username'] %>
    <%= track['title'] %>
    <a href="/tracks/edit/<%=track['id']%>/<%=track['title']%>/<%=track['description']%>">Edit</a> | <a href="/tracks/delete/<%=track['id']%>">Delete</a>
  </div>

</div>



<% end %>
</div>

<% @trackList.each do |track| %>

<table style="width: 300px;">
  <thead>
    <th>Username</th>
    <th>Title</th>
    <th>Description</th>
    <th>Track ID</th>
    <th>UserID</th>
    <th>Action</th>
  </thead>
  <tbody>
    <tr>
      <td><%= track['user']['username'] %></td>
      <td><%= track['title'] %></td>
      <td><%= track['description'] %></td>
      <td><%= track['id'] %></td>
      <td><%= track['user']['id'] %></td>
      <td><a href="/tracks/edit/<%=track['id']%>/<%=track['title']%>/<%=track['description']%>">Edit</a> | <a href="/tracks/delete/<%=track['id']%>">Delete</a></td>
      <td><a><audio controls><source src="<%= track['stream_url'] %>"></audio></a></td>
    </tr>
  </tbody>
</table>

<% end %>

<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script type="text/javascript" src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script type="text/javascript" src="../slick/slick.min.js"></script>
<script>
$(document).ready(function(){

$('.uneven').slick({
  slidesToShow: 4,
  slidesToScroll: 1,
  vertical: true,
  autoplay: true,
  autoplaySpeed: 5000
});

});
</script>
</body>
</html>
